<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#973961"
    >
    <include
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961"
      >
        <TextView
            android:id="@+id/chemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hormonal Therapy"
            android:textColor="#FFB9BF"
            android:textSize="27dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sen"
            android:layout_marginTop="38dp"/>
        <TextView
            android:layout_below="@id/chemo"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prescription drugs used most often to treat hot flashes and genitourinary syndrome of menopause (GSM) ."
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sen"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_below="@id/text1"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Side Effects"
            android:textColor="#FFB9BF"
            android:layout_marginTop="29dp"
            android:textSize="25dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/sen"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It may cause hot flashes, vaginal discharge, dryness and irritation, irregular periods or mood changes. It may also cause joint and muscle pain, as well as an increased risk of bone thinning (osteoporosis).
"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:fontFamily="@font/sen"
            />
        <Button
            android:id="@+id/FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingTop="14dp"
            android:layout_below="@id/text3"
            android:paddingBottom="14dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:fontFamily="@font/sen"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hover"
            android:elevation="5dp"
            android:layout_marginRight="20dp"
            android:text="FAQ'S regarding Chemotherapy"
            />
        <TextView
            android:layout_below="@id/FAQ"
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="You can also connect to our doctors to know more about Therapies for breast cancer by tapping on the call button"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:fontFamily="@font/sen"/>
        <Button
            android:layout_below="@id/text4"
            android:id="@+id/call"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Call  "
            android:fontFamily="@font/sen_regular"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:paddingLeft="40dp"
            android:paddingTop="9dp"
            android:paddingBottom="12dp"
            android:elevation="5dp"
            android:paddingRight="23dp"
            android:drawableRight="@drawable/ic_call"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_border"
            android:textSize="24dp"/>


    </RelativeLayout>
</LinearLayout>